<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mint_Chord_Writer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mint</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/back_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MintButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="backgroundTint">@color/mint</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FingerButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="backgroundTint">@color/gray</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ClearDropDown">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:itemPadding">5dp</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
    </style>

</resources>